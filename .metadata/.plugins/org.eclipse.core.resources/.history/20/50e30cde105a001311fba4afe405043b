    public static void getDirContent(String directory){
    	Path dir = Paths.get(directory);
		try (DirectoryStream<Path> stream = Files.newDirectoryStream(dir)) {
		    for (Path file: stream) {
		    	files.add(file);    
		    }
		} catch (IOException  x) {
		    System.err.println(x);
		}
    }
    
