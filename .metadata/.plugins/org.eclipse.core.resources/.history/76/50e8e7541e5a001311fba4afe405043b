import java.io.BufferedReader;
import java.io.File;
import java.io.FileReader;
import java.io.IOException;
import java.nio.file.DirectoryStream;
import java.nio.file.Files;
import java.nio.file.Path;
import java.nio.file.Paths;
import java.util.ArrayList;
import java.io.File;
import java.io.FilenameFilter;

public class Filter {
	
	public static File[] files;
	
	public static void main(String[] args){
		String path = "C://Users//CSoare//workspace//SpamFilter//data//train1//";
		String file = "C://Users//CSoare//workspace//SpamFilter//data//train1//spam1.txt";
		//System.out.println(finder(path));
		files = getDirectory(path);
		findFile(files, file);
		
	
	}
	
	public static File[] getDirectory( String dirName){
    	File dir = new File(dirName);
    	return dir.listFiles(new FilenameFilter() { 
    	         public boolean accept(File dir, String filename)
    	              { return filename.endsWith(".txt"); }
    	} );

    }
    
    public static void findFile(File[] files, String file){
    	for (File f : files){
    		System.out.println("f: "+ " "+f.getAbsolutePath() + "file: " + file);
    		if(f.getAbsolutePath() == file)
    			readFile(f.getAbsolutePath());
		}
    }
	    
	public static void readFile(String source){
		try (BufferedReader br = new BufferedReader(new FileReader(source))) {
			String sCurrentLine;
			while ((sCurrentLine = br.readLine()) != null) {
				System.out.println(sCurrentLine);
			}
 
		} catch (IOException e) {
			e.printStackTrace();
		} 
	}
	

}
